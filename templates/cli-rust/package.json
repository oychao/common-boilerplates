{
  "name": "cli-rust",
  "version": "0.0.1",
  "description": "a cli tool in rust",
  "main": "./bin/index.js",
  "type": "module",
  "author": {
    "name": "your name",
    "email": "your@email.com"
  },
  "license": "WTFPL",
  "keywords": [],
  "repository": "https://github.com/your/package/address",
  "scripts": {
    "start": "ts-node src-ts/main.ts",
    "build:rs": "cargo build --target=wasm32-unknown-unknown",
    "build:ts": "tsc",
    "build": "npm run build:rs && npm run build:ts",
    "watch": "concurrently --kill-others 'npm-watch build:rs' 'npm-watch build:ts'"
  },
  "files": [
    "LICENSE.md",
    "README.md",
    "bin/"
  ],
  "preferGlobal": true,
  "bin": {
    "hello": "./bin/main.js"
  },
  "watch": {
    "build:rs": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "rs"
      ]
    },
    "build:ts": {
      "patterns": [
        "src-ts"
      ],
      "extensions": [
        "ts"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^20.2.1",
    "@types/yargs": "^17.0.24",
    "concurrently": "^8.0.1",
    "npm-watch": "^0.11.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "ora": "^6.3.1",
    "yargs": "^17.7.2"
  }
}
